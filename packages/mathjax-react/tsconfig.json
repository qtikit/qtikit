{
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.stories.tsx"
  ]
}